extends layout

block content
    .ui.body
        .ui.container
            .ui.items
                each comment in comments
                    h2 #{comment.content}
                    p
                        if (comment.author)
                            strong
                                | #{comment.author.name} 
                        | 发布于 
                        | #{moment(comment.created).format('LLL')}
                        p 来自
                            if (comment.from)
                                a(href='/content/#{comment.from._id}') #{comment.from.title}
            
            .ui.center.aligned
                if (pageInfo && pageInfo.totalPage > 1)
                    - pageInfo.query = query
                    include ./mixin
                    +pagination(pageInfo)
